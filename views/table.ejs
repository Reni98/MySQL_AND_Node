<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Autó adatok</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col">
                <h1 style="text-align: center">Autók táblázata</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Szín</th>
                            <th>Márka</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% autok.forEach(auto => { %>
                            <tr>
                                <td><%= auto.id %></td>
                                <td><%= auto.szin %></td>
                                <td><%= auto.marka %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
